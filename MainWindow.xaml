<Window
    x:Class="Music.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Music"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Music Recognizer"
    Width="350"
    Height="82"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    MouseRightButtonDown="Window_MouseRightButtonDown"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Click="HistoryMenuItem_Click" Header="Histórico (Ctrl+H)" />
            <MenuItem Click="SettingsMenuItem_Click" Header="Configurações (Ctrl+S)" />
            <Separator />
            <MenuItem Click="ExitMenuItem_Click" Header="Sair" />
        </ContextMenu>
    </Window.ContextMenu>
    <Border
        x:Name="MainBorder"
        BorderBrush="#424242"
        BorderThickness="1"
        CornerRadius="5">
        <local:Recognizer x:Name="MainRecognizer" />
    </Border>
</Window>
